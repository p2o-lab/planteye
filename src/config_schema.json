{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "The Configuration Schema for Vision of PlantEye",
  "required": [
    "capturing_device",
    "data_storage",
    "buffer",
    "influxdb",
    "metadata",
    "event_logger"
  ],
  "properties": {
    "opcua": {
      "type": "object",
      "title": "Capturing device schema",
      "required": [
        "type",
        "connection",
        "parameters",
        "capturing_interval"
      ],
      "properties": {
        "type": {
          "$id": "#/properties/cap_dev/properties/url",
          "type": "string",
          "title": "Capturing device type",
          "default": "local_camera_cv2",
          "enum": [
            "local_camera_cv2",
            "local_camera_jetson",
            "rtmp"
          ]
        },
        "connection": {
          "$id": "#/properties/cap_dev/properties/connection",
          "type": "object",
          "title": "Connection data of capturing device"
        },
        "parameters": {
          "$id": "#/properties/cap_dev/properties/parameters",
          "type": "object",
          "title": "Capturing device parameters (according to OpenCV naming)"
        },
        "capturing_interval": {
          "$id": "#/properties/cap_dev/properties/capturing_interval",
          "type": "integer",
          "title": "Capturing interval in milliseconds",
          "default": 1000
        }
      }
    },
    "data_storage": {
      "type": "object",
      "title": "The data storage schema",
      "required": [
        "type",
        "connection"
      ],
      "properties": {
        "type": {
          "$id": "#/properties/data_storage/properties/type",
          "type": "string",
          "title": "Type of storage for frames",
          "default": "local",
          "enum": [
            "local",
            "dataverse",
            "ftp"
          ]
        },
        "connection": {
          "$id": "#/properties/data_storage/properties/connection",
          "type": "object",
          "title": "Connection data to access the data storage"
        }
      }
    },
    "buffer": {
      "type": "object",
      "title": "Buffer Schema",
      "required": [
        "max_size"
      ],
      "properties": {
        "max_size": {
          "$id": "#/properties/buffer/properties/buffer_size",
          "type": "integer",
          "title": "Capacity of buffer",
          "default": 100
        }
      }
    },
    "influxdb": {
      "$id": "#/properties/influx",
      "type": "object",
      "title": "The Influx Schema",
      "required": [
        "host",
        "port",
        "user",
        "password",
        "database",
        "db_user",
        "db_password",
        "reconnect_interval",
        "write_interval",
        "metric_id",
        "measurement"
      ],
      "properties": {
        "host": {
          "$id": "#/properties/influx/properties/host",
          "type": "string",
          "title": "Influxdb host",
          "default": "",
          "pattern": "^(.*)$"
        },
        "port": {
          "$id": "#/properties/influx/properties/port",
          "type": "integer",
          "title": "Port number",
          "default": 8086
        },
        "user": {
          "$id": "#/properties/influx/properties/user",
          "type": "string",
          "title": "Username to access influxdb server",
          "default": "root"
        },
        "password": {
          "$id": "#/properties/influx/properties/password",
          "type": "string",
          "title": "Password to access influxdb server",
          "default": "root"
        },
        "database": {
          "$id": "#/properties/influx/properties/database",
          "type": "string",
          "title": "Database name"
        },
        "db_user": {
          "$id": "#/properties/influx/properties/db_user",
          "type": "string",
          "title": "Username to access selected database",
          "default": "root"
        },
        "db_password": {
          "$id": "#/properties/influx/properties/db_password",
          "type": "string",
          "title": "Password to access selected database",
          "default": "root"
        },
        "reconnect_interval": {
          "$id": "#/properties/influx/properties/reconnect_interval",
          "type": "integer",
          "title": "Time interval between reconnection attempts",
          "default": 10000
        },
        "write_interval": {
          "$id": "#/properties/influx/properties/write_interval",
          "type": "integer",
          "title": "Time interval between two writing routines",
          "default": 10000
        },
        "metric_id": {
          "$id": "#/properties/influx/properties/metric_id",
          "type": "string",
          "title": "Metric id to show in event logger"
        },
        "measurement": {
          "$id": "#/properties/influx/properties/measurement",
          "type": "string",
          "title": "Measurement name of influxdb where to ingest data"
        }
      }
    },
    "metadata": {
      "type": "object",
      "title": "Metadata"
    },
    "event_logger": {
      "type": "object",
      "title": "Event logger",
      "required": [
        "publish",
        "print_level"
      ],
      "properties": {
        "publish": {
          "$id": "#/properties/event_logger/properties/publish",
          "type": "boolean",
          "title": "Whether publish events or not",
          "default": false
        },
        "print_level": {
          "$id": "#/properties/event_logger/properties/print_level",
          "type": "string",
          "title": "Threshold level for outputting event messages",
          "default": "INFO"
        }
      }
    }
  }
}
